{
    "version": "0.1.0:136+refactoring-87 (2016.03.03.)",
    "logVerbosity": 1,
    "folders": {
        "config": "config/",
        "strings": "{{config}}/strings/",
        "css": "css/",
        "data": "data/",
        "screen": "{{data}}/screens/",
        "component": "{{data}}/components/",
        "model": "{{data}}/models/",
        "shader": "{{data}}/shaders/",
        "texture": "{{data}}/textures/",
        "level": "{{data}}/levels/",
        "environment": "{{data}}/levels/environments/"
    },
    "defaultLanguage": "English",
    "configFiles": {
        "settings": {
            "filename": "settings.json",
            "folder": "config"
        },
        "strings": {
            "English": {
                "filename": "strings.json",
                "folder": "strings"
            },
            "magyar": {
                "filename": "strings-hu.json",
                "folder": "strings"
            }
        }
    },
    "dataFiles": {
        "graphics": {
            "resources": {
                "filename": "resources.json",
                "folder": "data"
            }
        },
        "logic": {
            "classes": {
                "filename": "classes.json",
                "folder": "data"
            },
            "environments": {
                "filename": "environments.json",
                "folder": "environment"
            },
            "levels": {
                "folder": "level",
                "filenames": [
                    "level.json"
                ]
            }
        }
    },
    "control": {
        "controllers": [
            {
                "type": "general",
                "actions": [
                    {
                        "name": "quit"
                    }, {
                        "name": "pause"
                    }, {
                        "name": "stopTime"
                    }, {
                        "name": "switchToPilotMode"
                    }, {
                        "name": "switchToSpectatorMode"
                    }, {
                        "name": "toggleHitboxVisibility"
                    }, {
                        "name": "toggleTextVisibility"
                    }, {
                        "name": "toggleMouseControls"
                    }, {
                        "name": "toggleJoystickControls"
                    }
                ]
            },
            {
                "type": "fighter",
                "actions": [
                    {
                        "name": "changeFlightMode"
                    }, {
                        "name": "nextTarget"
                    }, {
                        "name": "fire",
                        "continuous": true
                    }, {
                        "name": "forward",
                        "continuous": true
                    }, {
                        "name": "reverse",
                        "continuous": true
                    }, {
                        "name": "strafeLeft",
                        "continuous": true
                    }, {
                        "name": "strafeRight",
                        "continuous": true
                    }, {
                        "name": "raise",
                        "continuous": true
                    }, {
                        "name": "lower",
                        "continuous": true
                    }, {
                        "name": "resetSpeed"
                    }, {
                        "name": "yawLeft",
                        "continuous": true
                    }, {
                        "name": "yawRight",
                        "continuous": true
                    }, {
                        "name": "pitchUp",
                        "continuous": true
                    }, {
                        "name": "pitchDown",
                        "continuous": true
                    }, {
                        "name": "rollLeft",
                        "continuous": true
                    }, {
                        "name": "rollRight",
                        "continuous": true
                    }
                ]
            },
            {
                "type": "camera",
                "actions": [
                    {
                        "name": "controlCamera"
                    },
                    {
                        "name": "cameraMoveLeft",
                        "continuous": true
                    }, {
                        "name": "cameraMoveRight",
                        "continuous": true
                    }, {
                        "name": "cameraMoveUp",
                        "continuous": true
                    }, {
                        "name": "cameraMoveDown",
                        "continuous": true
                    }, {
                        "name": "cameraMoveForward",
                        "continuous": true
                    }, {
                        "name": "cameraMoveBackward",
                        "continuous": true
                    }, {
                        "name": "cameraTurnLeft",
                        "continuous": true
                    }, {
                        "name": "cameraTurnRight",
                        "continuous": true
                    }, {
                        "name": "cameraTurnUp",
                        "continuous": true
                    }, {
                        "name": "cameraTurnDown",
                        "continuous": true
                    }, {
                        "name": "cameraRollLeft",
                        "continuous": true
                    }, {
                        "name": "cameraRollRight",
                        "continuous": true
                    }, {
                        "name": "cameraDecreaseFOV",
                        "continuous": true
                    }, {
                        "name": "cameraIncreaseFOV",
                        "continuous": true
                    }, {
                        "name": "followNext"
                    }, {
                        "name": "followPrevious"
                    }, {
                        "name": "nextView"
                    }, {
                        "name": "previousView"
                    }, {
                        "name": "resetView"
                    }
                ]
            }
        ]
    }
}
