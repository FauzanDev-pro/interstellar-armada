            "resources": {
                "filename": "resources.json",
                "folder": "data"
            }
        },
        "logic": {
            "classes": {
                "filename": "classes.json",
                "folder": "data"
            },
            "environments": {
                "filename": "environments.json",
                "folder": "environment"
            },
            "levels": {
                "folder": "level",
                "filenames": [
                    "level.json"
                ]
            }
        }
    },
