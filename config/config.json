{
    "version": "0.1.0:136+refactoring-68 (2016.02.20.)",
    "logVerbosity": 1,
    "folders": {
        "config": "config/",
        "css": "css/",
        "data": "data/",
        "screen": "{{data}}/screens/",
        "component": "{{data}}/components/",
        "model": "{{data}}/models/",
