{
    "graphics": {
        "context": {
            "antialiasing": true,
            "filtering": "trilinear",
            "textureQualityPreferenceList": ["normal", "low"],
            "textureQuality": "normal",
            "shadowMapping": true,
            "shadows": {
                "quality": 2048,
                "ranges": [3, 10, 30, 90, 330, 1000],
                "numRanges": 4,
                "depthRatio": 1.5
            }
        },
        "shaders": {
            "complexity": "normal"
        },
        "levelOfDetailSettings": {
            "lodLoadProfile": {
                "maxLevel": 4,
                "autoLimitByScreenWidth": true,
                "limits": [
                    {
                        "screenSizeLessThan": 60,
                        "level": 0
                    }, {
                        "screenSizeLessThan": 120,
                        "level": 1
                    }, {
                        "screenSizeLessThan": 500,
                        "level": 2
                    }, {
                        "screenSizeLessThan": 800,
                        "level": 3
                    }
                ]
            },
            "lodDisplayProfile": {
                "maxLevel": 4,
                "compensateForObjectSize": true,
                "referenceSize": 100,
                "minimumRelativeSize": 0.05,
                "limits": [
                    {
                        "objectSizeLessThan": 30,
                        "level": 0
                    }, {
                        "objectSizeLessThan": 60,
                        "level": 1
                    }, {
                        "objectSizeLessThan": 250,
                        "level": 2
                    }, {
                        "objectSizeLessThan": 400,
                        "level": 3
                    }
                ]
            }
        }
    },
    "logic": {
        "database": {
            "modelRotation": true,
            "backgroundColor": [0, 0, 0, 0],
            "wireframeColor": [0, 1, 0, 1],
            "showSolidModel": true,
            "modelRevealAnimation": true
        },
        "battle": {
            "simulationStepsPerSecond": 60,
            "turnAccelerationDurationInSeconds": 0.5,
            "maxMoveBurnLevel": 0.5,
            "maxTurnBurnLevel": 0.35,
            "selfFire": true,
            "autoTargeting": "hitAndAutoTarget",
            "randomShips": {
                "falcon": 3,
                "viper": 2,
                "aries": 1,
                "taurus": 1
            },
            "hitboxColor": [0.0, 0.5, 0.5, 0.5],
            "hiboxTexture": "white",
            "hitboxShader": "lambert-with-luminosity",
            "targetViewName": "target",
            "targetChangeTransitonDuration": 300,
            "targetChangeTransitionStyle": "smooth"
        },
        "camera": {
            "defaultFOV": 40,
            "defaultFOVRange": [5, 100],
            "defaultSpan": 0.2,
            "defaultSpanRange": [0.2, 0.2],
            "defaultBaseOrientation": "positionFollowedObjects",
            "defaultPointToFallback": "positionFollowedObjectOrWorld"
        }
    },
    "control": {
        "controllers": [
