{
    "graphics": {
        "context": {
            "antialiasing": true,
            "filtering": "trilinear",
            "textureQualities": ["low", "normal"],
            "textureQuality": "normal",
            "shadowMapping": true,
            "shadows": {
                "quality": 2048,
                "ranges": [3, 10, 30, 90, 330, 1000],
                "numRanges": 4,
                "depthRatio": 1.5
            },
            "maxDynamicLights": 64
        },
        "shaders": {
            "complexity": "normal",
            "shadowMappingShaderName": "shadowMapping"
        },
        "levelOfDetailSettings": {
            "lodLoadProfile": {
                "maxLevel": 4,
                "autoLimitByScreenWidth": true,
                "limits": [
                    {
                        "screenSizeLessThan": 60,
                        "level": 0
                    }, {
                        "screenSizeLessThan": 120,
                        "level": 1
                    }, {
                        "screenSizeLessThan": 500,
                        "level": 2
                    }, {
                        "screenSizeLessThan": 800,
                        "level": 3
                    }
                ]
            },
            "lodDisplayProfile": {
                "maxLevel": 4,
                "compensateForObjectSize": true,
                "referenceSize": 100,
                "minimumRelativeSize": 0.05,
                "limits": [
                    {
                        "objectSizeLessThan": 30,
                        "level": 0
                    }, {
                        "objectSizeLessThan": 60,
                        "level": 1
                    }, {
                        "objectSizeLessThan": 250,
                        "level": 2
                    }, {
                        "objectSizeLessThan": 400,
                        "level": 3
                    }
                ]
            }
        }
    },
    "logic": {
        "general": {
            "useRequestAnimFrame": true,
            "defaultRandomSeed": 4718,
            "luminosityFactorsArrayName": "luminosityFactors"
        },
        "database": {
            "showLoadingBoxFirstTime": true,
            "showLoadingBoxOnItemChange": true,
            "backgroundColor": [0, 0, 0, 0],
            "wireframeColor": [0, 1, 0, 1],
            "showWireframeModel": true,
            "wireframeShaderName": "oneColorReveal",
            "showSolidModel": true,
            "solidShaderName": "shadowMapReveal",
            "lightSources": [
                {
                    "color": [1.0, 1.0, 1.0],
                    "direction": [0.0, 1.0, 1.0]
                },
                {
                    "color": [1.0, 1.0, 1.0],
                    "direction": [1.0, 0.0, 0.0]
                }
            ],
            "equipmentProfileName": "default",
            "startSizeFactor": 1,
            "minimumSizeFactor": 0.9,
            "maximumSizeFactor": 1.6,
            "modelRevealAnimation": true,
            "revealColor": [1.0, 1.0, 1.0, 1.0],
            "revealFPS": 60,
            "revealDuration": 2000,
            "revealSolidDelayDuration": 2000,
            "revealTransitionLengthFactor": 0.15,
            "modelAutoRotation": true,
            "modelMouseRotation": true,
            "rotationFPS": 60,
            "rotationRevealStartAngle": 90,
            "rotationStartAngle": 180,
            "rotationViewAngle": 60,
            "rotationDuration": 4000,
            "rotationMouseSensitivity": 1.0,
            "databaseRenderFPS": 60
        },
        "battle": {
            "battleRenderFPS": 60,
            "simulationStepsPerSecond": 60,
            "momentDuration": 1,
            "backgroundObjectDistance": 4500,
            "turnAccelerationDurationInSeconds": 0.5,
            "defaultMuzzleFlashDuration": 500,
            "selfFire": true,
            "autoTargeting": "hitAndAutoTarget",
            "defaultEquipmentProfileName": "default",
            "randomShips": {
                "falcon": 3,
                "viper": 2,
                "aries": 1,
                "taurus": 1
            },
            "randomShipsMapSize": 3000,
            "randomShipsEquipmentProfileName": "default",
            "randomShipsHeadingAngle": 90,
            "randomShipsRandomHeading": true,
            "hitboxColor": [0.0, 0.5, 0.5, 0.5],
            "hitboxTexture": "white",
            "hitboxShader": "lambert-with-luminosity",
            "targetViewName": "target",
            "targetChangeTransitonDuration": 300,
            "targetChangeTransitionStyle": "smooth"
        },
        "camera": {
            "defaultFOV": 40,
            "defaultFOVRange": [5, 100],
            "defaultSpan": 0.2,
            "defaultSpanRange": [0.2, 0.2],
            "defaultBaseOrientation": "positionFollowedObjects",
            "defaultPointToFallback": "positionFollowedObjectOrWorld"
        }
    },
